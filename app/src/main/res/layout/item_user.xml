<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="?android:attr/selectableItemBackground"
    >


    <ImageView
        android:id="@+id/imageview_userslist_item_user_avatar"
        android:layout_width="@dimen/userslist_item_avatar"
        android:layout_height="@dimen/userslist_item_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/textview_userslist_item_user_first_last_name"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/imageview_userslist_item_user_avatar"
        android:layout_toRightOf="@+id/imageview_userslist_item_user_avatar"
        android:maxLines="1"
        android:text="Vadym Shatokhin"
        android:textSize="16sp"/>

</RelativeLayout>